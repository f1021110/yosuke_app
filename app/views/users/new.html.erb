<h1 class="">新規登録</h1>
  <%= form_for @user do |f| %>
    
    <div class="name">
      <%= f.label :name, class: '' %>
      <%= f.text_field :name, class: '' %>
    </div>

    <div class="email">
      <%= f.label :email, class: '' %>
      <%= f.text_field :email, class: 'f' %>
    </div>

    <div class="password">
        <%= f.label :password, class: '' %>
        <%= f.password_field :password, class: '' %>
    </div>

    <div class="password_confirmation">
      <%= f.label :password_confirmation, class: '' %>
      <%= f.password_field :password_confirmation, class: '' %>
    </div>

    <%= f.submit "登録", class: '' %>
  <% end %>
  
  <%= link_to 'ログイン', 'login_path',class: '' %>
