<div class="topic-index-wrapper">

  <div class="container">
    <% @posts.each do |post| %>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="topic-index-single">
              <h2 class="topic-author">
                <%= post.user.name %>
              </h2>
            
              <p class="topic-text">
                <%= post.description %>
              </p>
            </div>
          </div>
        </div>
      <% if current_user.admin? %>
        <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "削除してよろしいですか?" } %>
      <% end %>

    <% end %>
  </div>
</div>

      